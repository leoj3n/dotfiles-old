[include]
  # Set the extra personal settings (e.g. name and email)
  path = ~/.gitconfig_extra
[alias]
  # http://gitready.com/advanced/2011/10/21/ribbon-and-catchup-reading-new-commits.html
  ribbon = tag --force _ribbon origin/master
  catchup = log --patch --reverse --topo-order _ribbon..origin/master
	today = !git log --since=midnight --author=\"$(git config user.name)\" --oneline
  # Search for branch
  brep = !git branch -a | grep
  # Revert an applied stash (re-stash)
  stash-unapply = !git stash show -p | git apply -R
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore_global
  trustctime = false
	ignorecase = false
[push]
  default = simple
[merge]
  tool = vimdiff
